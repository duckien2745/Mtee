<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_food"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_category_food"
            android:padding="8dp"
            android:src="@drawable/ic_food" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Ẩm thực"
            android:textColor="#e61b1b1b"
            android:textSize="12sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_beauty"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_category_beauty"
            android:padding="8dp"
            android:src="@drawable/ic_beauty" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Khỏe đẹp"
            android:textColor="#e61b1b1b"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_fashion"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_category_fashion"
            android:padding="8dp"
            android:src="@drawable/ic_fashion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Thời trang"
            android:textColor="#e61b1b1b"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>
