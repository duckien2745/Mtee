<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_my_voucher"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_my_voucher"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/color_white"
            app:tabBackground="@color/color_white"
            app:tabIndicatorColor="@color/color_item_select" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#736d6d" />

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_my_voucher"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_sign_in_with_google"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_margin="40dp"
        android:background="@drawable/bg_button_login_google"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:visibility="visible">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_google_plus" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đăng nhập với Google"
            android:textColor="@color/color_white"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>


